<html>
  <head>
    <title>{{ name }} - {{ message }}</title>
    
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Cal+Sans&display=swap');

      * {
        box-sizing: border-box;
      }

      body {
        background: #131314;
        color: white;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        font-weight: 400;
        height: 100%;
        margin: 0;
        padding: 0;
      }

      h1, h2, h3, h4 {
        font-family: "Cal Sans", sans-serif;
        margin: 0;
      }

      h1 {
        font-size: 2rem;
        margin: 0 0 1rem;
        color: #3a9d95;
      }

      .container {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: 100%;
      }

      .subtitle {
        font-size: 1.375rem;
        font-weight: 300;
        margin-bottom: 0;
      }

      em {
        font-style: normal;
        color: #3a9d95;
      }
    </style>
  </head>
  
  <body>
    <main class="container">
      <div>
        <h1>{{ context.response.status }} - {{ name }}</h1>
        <div class="subtitle">{{ message }}</div>
      </div>
    </main>
  </body>
</html>
