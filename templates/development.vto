<html>
  <head>
    <title>{{ name }} - {{ message }}</title>
    
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&family=Vujahday+Script&display=swap');

      :root {
        --color-pure-white: #ffffff;
        --color-white: #fafcff;
        --color-neutral-50: #f8f9fc;
        --color-neutral-100: #f1f3f9;
        --color-neutral-200: #e2e6f0;
        --color-neutral-300: #cbd1e1;
        --color-neutral-400: #94a0b8;
        --color-neutral-500: #64708b;
        --color-neutral-600: #475269;
        --color-neutral-700: #334055;
        --color-neutral-800: #1e253b;
        --color-neutral-900: #0f152a;
        --color-neutral-950: #020617;
        --color-primary: #577c8e;
        --color-primary-50: #f0f7ff;
        --color-primary-100: #e0f0ff;
        --color-primary-200: #b3e0ff;
        --color-primary-300: #66c2ff;
        --color-primary-400: #1a9fff;
        --color-primary-500: #0077cc;
        --color-primary-600: #005c99;
        --color-primary-700: #004166;
        --color-primary-800: #002633;
        --color-primary-900: #001319;
        --color-primary-950: #000a0d;      
      }

      * {
        box-sizing: border-box;
      }

      body {
        background: #F0F3F8;
        background-image: radial-gradient(ellipse farthest-side at 25% 25%, var(--bg-color), var(--bg-color) 50%, transparent), radial-gradient(var(--line-color) 1.5px, transparent 1.5px), linear-gradient(0deg, transparent, var(--bg-color) 30%, var(--bg-color)), linear-gradient(0deg, var(--bg-color), var(--bg-color));
        background-size: cover, 1rem 1rem, cover;
        background-position: 0 0, calc(-.5rem - .5px) calc(-.25rem + .5px), 0 0;
        color: #000000;
        font-family: "Inconsolata", monospace;
        font-weight: 400;
        padding: 2rem 2rem 4rem;
      }

      h1, h2, h3, h4 {
        margin: 0 0 1rem;
      }

      h1 {
        font-size: 2rem;
        margin: 0 0 1rem;
        color: var(--color-primary-950);
      }

      h3 {
        font-weight: 400;
      }

      .container {
        width: 100%;
        max-width: 1024px;
        margin: 0 auto;
      }

      header.title {
        margin-bottom: 2rem;
      }

      main .card {
        margin-bottom: 2rem;
      }

      main details summary {
        margin-bottom: 1.5rem;
      }

      .card {
        background: #ffffff;
        border-radius: 0.5rem;
        border: 2px solid var(--color-neutral-300);
        padding: 2rem;
      }

      .stack-line {
        border-bottom: 1px solid var(--color-neutral-300);
        padding: 1rem 0;
      }

      .key-value {
        align-items: center;
        border-bottom: 1px solid var(--color-neutral-300);
        display: flex;
        padding: 1rem 0;
        gap: 1.5rem;
      }

      .key-value .key {
        font-weight: 700;
        min-width: 200px;
      }

      .key-value .value {
        word-wrap: break-word;
        overflow: hidden;
      }

      .file-details {
        margin-bottom: 1rem;
      }

      .code-window {
        border: 1px solid var(--color-neutral-300);
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        font-size: 1rem;
      }
    </style>
  </head>
  
  <body>
    <header class="title container">
      <h1>
        {{ if context.response.status }}
          {{ context.response.status }} - 
        {{ /if }}
        {{ name }}
      </h1>
      <div class="subtitle">{{ message }}</div>
    </header>
  
    <main class="container">
        <details class="code-container card" open>
          <summary>File</summary>

          <div class="file-details">
            <div class="path">{{ stack.lines[0].file }}</div>
            <div class="open">
              <a href="vscode://file/{{ stack.lines[0].file }}">Open</a>
            </div>
          </div>

          <div class="code-window">
            {{ code }}
          </div>
        </details>

        <details class="stack card" open>
          <summary>Stack trace ({{ stack.lines.length }})</summary>

          <ol style="counter-reset: countdown {{ stack.lines.length + 1 }}">
            {{ for line of stack.lines }}
              <li class="stack-line">
                <div class="stack-line-container">
                  <div class="stack-line-content">
                    {{ if line.method }}
                      <div class="stack-line-method">{{ line.method }}</div>
                    {{ /if }}

                    {{ line.file }}
                  </div>
                  <div class="stack-line-position">
                    <em>{{ line.line }}:{{ line.col }}</em>
                  </div>
                </div>
              </li>
            {{ /for }}
          </ol>
        </details>

        <details class="environment-details card" open>
          <summary>Context</summary>

          <h3>Request</h3>

          <div class="request-headers">
            {{ for key, value of context.request.headers }}
              <div class="key-value">
                <div class="key">{{ key }}</div>
                <div class="value">{{ value }}</div>
              </div>
            {{ /for }}
          </div>
        </details>
    </main>
  </body>
</html>
